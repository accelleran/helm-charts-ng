{
  "release-type": "helm",
  "versioning": "default",
  "skip-github-release": true,
  "label": "release: pending",
  "release-label": "release: approved",
  "include-component-in-tag": true,
  "include-v-in-tag": false,
  "separate-pull-requests": true,
  "pull-request-title-pattern": "chore: release${component} ${version}",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "plugins": [
    "sentence-case"
  ],
  "packages": {
    "charts/common": {
      "component": "common",
      "package-name": "common"
    },
    "charts/cell-wrapper": {
      "component": "cell-wrapper",
      "package-name": "cell-wrapper"
    },
    "charts/cell-wrapper-config": {
      "component": "cell-wrapper-config",
      "package-name": "cell-wrapper-config"
    },
    "charts/cu-cp": {
      "component": "cu-cp",
      "package-name": "cu-cp"
    },
    "charts/cu-up": {
      "component": "cu-up",
      "package-name": "cu-up"
    },
    "charts/drax": {
      "component": "drax",
      "package-name": "drax"
    },
    "charts/xapp-anr": {
      "component": "xapp-anr",
      "package-name": "xapp-anr"
    }
  }
}
